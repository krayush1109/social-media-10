        <script>
            // Ensure the chat container is scrolled to the bottom on page load
            function ScrollToBottom() {
                const chatContainer = document.querySelector('#conversation-area');
                chatContainer.scrollTop = chatContainer.scrollHeight;
                console.log("ScrollToBottom is Working");
            }

            document.addEventListener('DOMContentLoaded', () => {
                ScrollToBottom();
            });


            function displayReceiverImages(receiver, thumbnailUrl) {
                const receiverImages = document.querySelectorAll('.incominnng div img');
                receiverImages.forEach((image) => {
                    image.src = thumbnailUrl;
                })
                document.querySelector('#receiverName').innerHTML = '' || receiver;
            }

            function activeReceiverChat(userIdx) {
                // console.log("userIdx : ", userIdx);
                let activateUserName = document.querySelectorAll('.chat-content')
                activateUserName.forEach((activeUser, i) => {
                    // console.log(i)
                    if (userIdx == i)
                        activeUser.classList.add('bg-slate-500');
                    else
                        activeUser.classList.remove('bg-slate-500');

                })
            }

            function setupMessageSubmission() {
                const form1 = document.querySelector('#write-msg-footer');
                const message = document.querySelector('#inputMsg');
                form1.addEventListener('submit', (e) => {
                    e.preventDefault();
                    // console.log("message : ", message.value);    
                    appendOutgoingMsg(message.value);
                    message.value = "";

                    // Scroll to the bottom
                    ScrollToBottom();
                })
            }

            function appendOutgoingMsgToFrontendOnly(msg) {
                const template = `
                                <div
                                    class="outgoinnng each-chat-box flex items-center text-md font-sans text-gray-700 my-2 w-[95%] justify-end">
                                    <div class="hidden"></div>
                                    <div class="msg-txt flex flex-col gap-3 max-w-1/2 items-end">
                                        <p class="bg-red-500 p-2 px-3 rounded-xl leading-6 font-semibold text-white">
                                            ${msg}    
                                        </p>
                                    </div>
                                </div>
                `;

                document.querySelector('#conversation-area').innerHTML += template;
            }
        </script>

        <script src="/socket.io/socket.io.js"></script>
        <script>
            var socket = io();
            const loggedInUsername = "<%= user.username %>"
            let receiver = "Initial null";

            // console.log("Hi, Msg from Frontend.");
            // console.log(loggedInUsername)

            socket.emit('join_chat', loggedInUsername)
        </script>

        <script>
            function openChat(username, thumbnailUrl, userIdx) {
                receiver = username;

                displayReceiverImages(receiver, thumbnailUrl);
                activeReceiverChat(userIdx);

                document.querySelector('#right-hero-temp').classList.add('hidden');
                document.querySelector('#right-hero').classList.remove('hidden');

                // Emit start_chat_session after receiver is set
                socket.emit('start_chat_session', {
                    receiver: receiver,
                    sender: loggedInUsername
                });
            }


            socket.on('start_chat_session', async (messagesDB, thumbnailUrl) => {
                // Clear the conversation area before appending messages
                document.querySelector('#conversation-area').innerHTML = '';

                // console.log("messagesDB : ", messagesDB);
                messagesDB.forEach((msgDB) => {
                    if (msgDB.sender == loggedInUsername) {
                        appendOutgoingMsgToFrontendOnly(msgDB.msg);
                    } else {
                        appendIncomingMsg(msgDB.msg, thumbnailUrl);
                    }
                })
                ScrollToBottom();
            })

            socket.on('message_received', async (msgObject) => {
                appendIncomingMsg(msgObject.msg, msgObject.thumbnailUrlReceiver);

                const receiverImages = document.querySelectorAll('.incominnng div img')
                receiverImages.forEach((image) => {
                    image.src = thumbnailUrl;
                })
                ScrollToBottom();
            })


            function appendOutgoingMsg(msg) {
                // msg = "This is Demo Message";

                appendOutgoingMsgToFrontendOnly(msg);

                socket.emit('user_message', {
                    msg: msg,
                    receiver: receiver,
                    sender: loggedInUsername
                })

            }

            function appendIncomingMsg(msg, url) {
                // msg = "Msg from Server to You";

                const template = `
                    <div
                        class="incominnng each-chat-box flex items-center text-md font-sans text-gray-700 my-2 w-[95%]">
                        <div class="mr-3">
                            <img src="${url}" alt=""
                                class="w-12 h-12 rounded-full shadow-sm">
                        </div>
                        <div class="msg-txt flex flex-col gap-3 max-w-1/2">
                            <p class="bg-gray-200 p-2 px-3 rounded-xl leading-6 font-semibold">
                                ${msg}
                            </p>
                        </div>
                    </div>
                `;

                document.querySelector('#conversation-area').innerHTML += template;

                ScrollToBottom();
            }

            setupMessageSubmission();

        </script>