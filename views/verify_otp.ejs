<%- include('./partials/header') %>
    <%- include('./partials/navbar') %>

        <section class="p-0 w-full h-[--container-h1] flex overflow-hidden ">

            <div id="lhs-register" class="w-[60%] h-full flex justify-center items-start ">
                <img src="../images/OTP-(1).svg" class=" object-cover  min-w-[40%] min-h-[10%] mt-16" alt="Img NA">
            </div>
            <div id="rhs-register" class="w-[40%] h-full ">

                <div class="min-h-[70%] flex flex-col gap-6  flex flex-col justify-center">
                    <div class="text-center mb-12">
                        <h1 class="text-[3.5rem] text-[#3e64b4] font-semibold  w-full px-[5rem] ">
                            Verify Password </h1>
                        <p class="text-zinc-500 text-lg font-semibold mt-8">OTP sent to your mail</p>
                        <a href="https://mail.google.com/mail/" target="_blank" class="text-blue-500 text-lg font-semibold underline "><%= user.email %></a>
                    </div>
                    <form action="/user/verify-otp/<%= user._id %>" method="post" class="flex flex-col justify-start gap-6 px-[5rem]">
                        <input required class="px-6 py-2 rounded-full font-semibold " type="number" name="otp_inp" placeholder="Enter OTP">
                        
                        <button class="px-8 py-2 bg-[#448396] hover:bg-[#8ac9dd] rounded-full  text-white text-xl font-semibold"
                            type="submit">Verify</button>
                    </form>


                </div>

        </section>

        <%- include('./partials/footer') %>